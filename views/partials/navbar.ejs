<script>
	setInitialSoundState();
	function setInitialSoundState(){
		var soundState = getCookie('sonor');
		if(soundState == null || soundState == 'null' || soundState === undefined){
			document.getElementById('soundState').innerText = 'Sonor ✔️';
			var cookieString = "sonor=on;path=/";
		}
		else if (soundState == 'off'){
			document.getElementById('soundState').innerText = 'Sonor ❌';
			var cookieString = "sonor=off;path=/";
		}
		document.cookie = cookieString;
	}
	function getCookie(name) {
	  const value = `; ${document.cookie}`;
	  const parts = value.split(`; ${name}=`);
	  if (parts.length === 2) return parts.pop().split(';').shift();
	}
	function soundSwap(){
		var soundState = document.getElementById('soundState').innerText;
		if(soundState == 'Sonor ✔️'){
			document.getElementById('soundState').innerText = 'Sonor ❌';
			var cookieString = "sonor=off;path=/";
		}
		else {
			document.getElementById('soundState').innerText = 'Sonor ✔️';
			var cookieString = "sonor=on;path=/";
			var audio = new Audio('/sounds/soundSwap.mp3');
			try{
				audio.play();
			}
			catch(err){
			}
		}
		document.cookie = cookieString;
	}
</script>