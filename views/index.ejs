<!DOCTYPE html>
<html id = "best-body">
  <head>
    <title><%- title %></title>
    <% include partials/head %>
  </head>
  <body onload="setGreeting();">
  	<% include partials/navbar %>
  	
  <div class="columns greeting">
    <div class="column is-full">
      <span class="is-size-1 has-text-weight-semibold">Bine ai venit, </span><span class = "is-size-1 has-text-weight-semibold" id="greetingText"></span>
    </div>
  </div>
  <div class="space"></div>
  <div class="room-container">
    <div class="text">
      <p class = "is-size-2">Lista cu camere</p>
      <hr class = "red-line">
    </div>
    <div class="actual-rooms" id = "add-rooms-here">
      <% for (var i = 0; i < rooms.length; i++) { -%>
        <a href = "/room/<%-rooms[i].name%>" class = "button is-primary is-rounded"><%-rooms[i].name%></a>
      <% } -%>

      <% Object.keys(rooms).forEach(room => { %>
        <a href="/room/<%-room%>" class="button is-primary is-rounded"><%-room%></a>
      <%}) %>
    </div>
  </div>
  <div class="space"></div>
  <div class="room-container">
    <div class="text">
      <p class = "is-size-2">Creeaza o camera noua</p>
      <hr class = "red-line">
    </div>
    <div class="new-room">
      <form action="/new" method="POST">
        <div class="field">
          <div class="control">
            <input class="input is-primary" type="text" name="room" placeholder="Numele camerei" required>
          </div>
          <div class="control">
            <button type="submit" class="button is-success is-rounded">Creeaza</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="/javascripts/getName.js"></script>
  <script defer src = "http://localhost:8080/socket.io/socket.io.js"></script>
  <script defer src = "/javascripts/roomChecker.js"></script>
  </body>
</html>
